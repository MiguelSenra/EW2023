extends layout 
block content

    html
        head
            meta(charset="UTF-8") 
            link(rel="icon" href="favicon.png") 
            link(rel="stylesheet" href="/stylesheets/w3.css") 
            title Tasks Management
        body
            .w3-card-4
                header.w3-container.w3-blue 
                   h1 Tasks Management 
                h2 Adicionar um novo utilizador
                    a.w3-btn.w3-round.w3-light-blue.w3-margin-left(href="/users/add") +  
                if (form_pessoa == 1)
                    form.w3-container(method="POST")
                        fieldset
                            legend Registo de Novo Utilizador
                            label Id
                            input.w3-input.w3-round(type="text" name="id") 
                            label Name
                            input.w3-input.w3-round(type="text" name="nome")
                        button.w3-btn.w3-light-blue.w3-mb-2.w3-round(type="submit") Registar

                h2 Lista de Tarefas
                    a.w3-btn.w3-round.w3-light-blue.w3-margin-left(href="/tasks/add") +
                .w3-container
                    include tabela.pug
                footer.w3-container.w3-blue
                    h5 Generated by RPCW2023 in #{data}